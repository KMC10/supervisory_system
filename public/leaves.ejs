<!DOCTYPE html>
<html>
    <head>
        <title>Leave Requests</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f7f7f7;
                color: #333;
            }

            .container {
                max-width: 1200px;
                margin: 20px auto;
                padding: 20px;
                background-color: #fff;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            th, td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .button, .button1 {
                padding: 10px 20px;
                border: none;
                color: white;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            .button {
                background-color: green;
                border-radius: 5px;
            }

            .button:hover {
                background-color: green;
            }

            .button1 {
                background-color: red;
                border-radius: 5px;
            }

            .button1:hover {
                background-color: #d32f2f;
            }

            button:disabled {
                background-color: navy;
                color: white;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h2>Unattended Leave Requests</h2>
            <table>
                <tr>
                    <th>leave_id</th>
                    <th>start_date</th>
                    <th>end_date</th>
                    <th>reason</th>
                    <th>applied</th>
                    <th>Accepted</th>
                    <th>Rejected</th>
                    <th>Action</th>
                </tr>
                <!-- Server-side script should generate table rows here -->
                <% data.forEach((row) => { %>
                <tr>
                    <td><%= row.leave_id %></td>
                    <td><%= row.start_date %></td>
                    <td><%= row.end_date %></td>
                    <td><%= row.reason %></td>
                    <td class="applied"><%= row.applied %></td>
                    <td class="Accepted"><%= row.Accepted %></td>
                    <td class="Rejected"><%= row.Rejected %></td>
                    <td>
                        <button id="approve-btn" class="button"
                            data-leave-id="<%= row.leave_id %>">Approve</button>
                        <button id="reject-btn" class="button1"
                            data-leave-id="<%= row.leave_id %>">Reject</button>
                    </td>
                </tr>
                <% }); %>
            </table>
        </div>
        <script src="/leave.js"></script>
    </body>
</html>